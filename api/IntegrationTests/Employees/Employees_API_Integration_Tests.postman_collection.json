						"type": "text/javascript",
						"exec": [
							"pm.test(\"Add dependent should return default values\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.employeeId).to.eql(pm.globals.get(\"employeeId\"));",
							"    pm.expect(jsonData.firstName).to.eql(\"Fred\");",
							"    pm.expect(jsonData.lastName).to.eql(\"Gunther\");",
							"    pm.expect(jsonData.personalBenefitsCost).to.eql(\"$500.00\");",
							"});",
							""
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n\t\"EmployeeId\":{{employeeId}},\r\n\t\"FirstName\":\"Fred\",\r\n\t\"LastName\":\"Gunther\"\r\n}"
